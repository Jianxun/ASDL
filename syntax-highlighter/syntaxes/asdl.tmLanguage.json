{
  "scopeName": "source.asdl",
  "name": "ASDL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#asdl-top- sections"
    },
    {
      "include": "#asdl-sub-sections"
    },
    {
      "include": "#asdl-keywords"
    },
    {
      "include": "#port-directions"
    },
    {
      "include": "#port-types"
    },
    {
      "include": "#field-names"
    },
    {
      "include": "#spice-templates"
    },
    {
      "include": "#asdl-numbers"
    },
    {
      "include": "#yaml-base"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.asdl",
          "match": "#.*$"
        }
      ]
    },
    "asdl-top-sections": {
        "patterns": [
          {
            "name": "entity.name.section.asdl",
            "match": "^\\s*(file_info|modules|imports|model_alias)\\s*:"
          }
        ]
      },
    "asdl-sub-sections": {
      "patterns": [
        {
          "name": "entity.name.section.asdl",
          "match": "^\\s*(ports|internal_nets|instances|spice_template|parameters|variables)\\s*:"
        }
      ]
    },
    "asdl-keywords": {
      "patterns": [
        {
          "name": "keyword.control.asdl",
          "match": "\\b(dir|type|model|mappings|doc|top_module)\\b"
        }
      ]
    },

    "port-directions": {
      "patterns": [
        {
          "name": "constant.language.port-direction.asdl",
          "match": "\\b(in|out|inout)\\b"
        }
      ]
    },
    "port-types": {
      "patterns": [
        {
          "name": "constant.language.port-type.asdl",
          "match": "\\b(signal|power|ground|bias|control)\\b"
        }
      ]
    },
    "field-names": {
      "patterns": [
        {
          "name": "variable.other.field.asdl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:"
        }
      ]
    },
    "spice-templates": {
      "patterns": [
        {
          "name": "string.quoted.double.asdl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.asdl",
              "match": "\\\\."
            },
            {
              "name": "variable.parameter.asdl",
              "match": "\\{[^}]+\\}"
            }
          ]
        },
        {
          "name": "string.quoted.single.asdl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.asdl",
              "match": "\\\\."
            },
            {
              "name": "variable.parameter.asdl",
              "match": "\\{[^}]+\\}"
            }
          ]
        }
      ]
    },
    "asdl-numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.asdl",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.asdl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.scientific.asdl",
          "match": "\\b\\d+(\\.\\d+)?[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.unit.asdl",
          "match": "\\b\\d+(\\.\\d+)?[a-zA-Z]+\\b"
        }
      ]
    },
    "yaml-base": {
      "patterns": [
        {
          "name": "punctuation.definition.mapping.key.asdl",
          "match": "\\b\\w+\\s*:"
        },
        {
          "name": "punctuation.definition.sequence.asdl",
          "match": "\\s*-\\s"
        },
        {
          "name": "punctuation.definition.mapping.asdl",
          "match": "\\{|\\}"
        },
        {
          "name": "punctuation.definition.sequence.asdl",
          "match": "\\[|\\]"
        },
        {
          "name": "punctuation.separator.key-value.asdl",
          "match": ":"
        },
        {
          "name": "punctuation.separator.sequence.asdl",
          "match": ","
        }
      ]
    }
  }
}
