{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^(.*\\{[^}]*|.*\\[[^\\]]*|.*\\([^)]*)$",
    "decreaseIndentPattern": "^(.*\\}|.*\\]|.*\\))$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*#?\\s*<\\s*#",
      "end": "^\\s*#\\s*#?\\s*#\\s*>"
    }
  }
}



