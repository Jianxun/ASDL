{
  "ASDL File Template": {
    "prefix": "asdl-file",
    "body": [
      "file_info:",
      "  top_module: ${1:module_name}",
      "  doc: ${2:Description of the circuit}",
      "",
      "imports:",
      "  ${3:alias}: ${4:file.asdl}",
      "",
      "model_alias:",
      "  ${5:local_name}: ${6:alias.module_name}",
      "",
      "modules:",
      "  ${1:module_name}:",
      "    ports:",
      "      ${7:port_name}: { dir: ${8:in}, type: ${9:signal} }",
      "    instances:",
      "      ${10:instance_name}: { model: ${11:model_name}, mappings: { ${12:port}: ${13:net} } }",
      "",
      "  ${11:model_name}:",
      "    ports: { ${12:port}: { dir: ${8:in} } }",
      "    spice_template: \"${14:{name} {port} model_name L=0.18u W=1u}\""
    ],
    "description": "Complete ASDL file template with all major sections"
  },
  "Module Definition": {
    "prefix": "module",
    "body": [
      "  ${1:module_name}:",
      "    ports:",
      "      ${2:port_name}: { dir: ${3:in}, type: ${4:signal} }",
      "    instances:",
      "      ${5:instance_name}: { model: ${6:model_name}, mappings: { ${7:port}: ${8:net} } }"
    ],
    "description": "Basic module definition with ports and instances"
  },
  "Port Definition": {
    "prefix": "port",
    "body": [
      "      ${1:port_name}: { dir: ${2:in}, type: ${3:signal} }"
    ],
    "description": "Port definition with direction and type"
  },
  "Instance Definition": {
    "prefix": "instance",
    "body": [
      "      ${1:instance_name}: { model: ${2:model_name}, mappings: { ${3:port}: ${4:net} } }"
    ],
    "description": "Instance definition with model and port mappings"
  },
  "SPICE Template": {
    "prefix": "spice",
    "body": [
      "    spice_template: \"${1:{name} {port} model_name L=${2:0.18u} W=${3:1u}}\""
    ],
    "description": "SPICE template for primitive modules"
  },
  "Import Statement": {
    "prefix": "import",
    "body": [
      "  ${1:alias}: ${2:file.asdl}"
    ],
    "description": "Import statement for external ASDL files"
  },
  "Model Alias": {
    "prefix": "alias",
    "body": [
      "  ${1:local_name}: ${2:alias.module_name}"
    ],
    "description": "Model alias mapping"
  },
  "File Info": {
    "prefix": "fileinfo",
    "body": [
      "file_info:",
      "  top_module: ${1:module_name}",
      "  doc: ${2:Description of the circuit}"
    ],
    "description": "File information section"
  }
}



