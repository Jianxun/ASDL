{
  "name": "asdl-syntax-highlighter",
  "displayName": "ASDL Syntax Highlighter",
  "description": "Syntax highlighting for ASDL (Analog System Description Language) files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "asdl",
    "analog",
    "circuit",
    "spice",
    "yaml"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:asdl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "asdl",
        "aliases": [
          "ASDL",
          "Analog System Description Language"
        ],
        "extensions": [
          ".asdl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asdl",
        "scopeName": "source.asdl",
        "path": "./syntaxes/asdl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "asdl",
        "path": "./snippets/asdl.json"
      }
    ],
    "commands": [
      {
        "command": "asdl.createNewFile",
        "title": "Create New ASDL File",
        "category": "ASDL"
      },
      {
        "command": "asdl.validateSyntax",
        "title": "Validate ASDL Syntax",
        "category": "ASDL"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "asdl.createNewFile",
          "when": "editorLangId == asdl"
        },
        {
          "command": "asdl.validateSyntax",
          "when": "editorLangId == asdl"
        }
      ],
      "editor/context": [
        {
          "command": "asdl.validateSyntax",
          "when": "editorLangId == asdl",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5"
  },
  "publisher": "asdl-project",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/asdl-suite.git"
  },
  "license": "MIT"
}
