modules:

  r2r_ladder:
    instances:
      Rs<7:0>: res value=1k
      Rp<7:0>: res value=2k
      R0: res value=1k
      Rout: res value=1

    nets:
      $vss: [R0.A]
      $out: [Rout.B]

      # no splicing in RHS
      #tap<7>: [Rp<7>.A, Rs<7>.B, Rout.A]
      #tap<6:0>: [Rp<6:0>.B, Rp<6:0>.A, Rs<7:1>.A]

      # splicing in RHS
      tap<7:0>: [Rp<7:0>.A, Rs<7:0>.B, Rs<7:1>.A;Rout.A]

      net0: [Rs<0>.A, R0.B]
      $drive<7:0>: [Rp<7:0>.B]


